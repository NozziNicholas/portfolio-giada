---
import { galleryItems } from "../data/drawing.js";

// Helper to group items into rows of 2 for desktop, but keep sliders as their own row
function getRows(arr: any) {
  const rows = [];
  let buffer = [];
  for (let i = 0; i < arr.length; i++) {
    if (arr[i].type === "slider") {
      if (buffer.length) {
        rows.push(buffer);
        buffer = [];
      }
      rows.push([arr[i]]);
    } else {
      buffer.push(arr[i]);
      if (buffer.length === 2) {
        rows.push(buffer);
        buffer = [];
      }
    }
  }
  if (buffer.length) rows.push(buffer);
  return rows;
}
---

<section
  class="grid grid-cols-1 lg:grid-cols-[3fr_3fr_1fr_3fr_3fr] gap-x-2 gap-y-8 p-8"
>
  {/* Mobile: single column */}
  <div class="block lg:hidden">
    {
      galleryItems.map((item) =>
        item.type === "drawing" ? (
          <a
            href={`/drawings/${item.slug}`}
            class="group w-full max-w-md mx-auto mb-8 flex flex-col overflow-hidden rounded-lg shadow hover:shadow-lg transition bg-white"
          >
            <div class="w-full aspect-[4/5] bg-gray-100 overflow-hidden">
              <img
                src={item.image}
                alt={item.title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
              />
            </div>
            <div class="p-4">
              <h2 class="text-lg font-semibold text-gray-800 text-center">
                {item.title}
              </h2>
              <p class="mt-2 text-gray-600 text-center">{item.description}</p>
            </div>
          </a>
        ) : (
          <a
            href={`/drawings/${item.slug}`}
            class="block w-4/6 h-40 mx-auto my-2 rounded shadow hover:shadow-lg hover:scale-105 transition-transform duration-300 hover:cursor-pointer"
          >
            <img src={item.image} alt="" class="w-full h-full " />
          </a>
        )
      )
    }
  </div>
  {/* Desktop: 5-column paired layout, slider spans all columns */}
  <div class="hidden lg:contents">
    {
      getRows(galleryItems).map((row) =>
        row.length === 1 && row[0].type === "slider" ? (
          <a
            href={`/drawings/${row[0].slug}`}
            class="col-span-5 block w-4/6 h-40 mx-auto my-2 rounded shadow hover:shadow-lg hover:scale-105 transition-transform duration-300 hover:cursor-pointer"
          >
            <img src={row[0].image} alt="" class="w-full h-full" />
          </a>
        ) : (
          <>
            <div class="col-span-1" />
            {row[0] && row[0].type === "drawing" ? (
              <a
                href={`/drawings/${row[0].slug}`}
                class="col-span-1 group w-full max-w-md mx-auto px-2 flex flex-col overflow-hidden rounded-lg shadow hover:shadow-lg transition bg-white"
              >
                <div class="w-full aspect-[4/5] bg-gray-100 overflow-hidden">
                  <img
                    src={row[0].image}
                    alt={row[0].title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                  />
                </div>
                <div class="p-4">
                  <h2 class="text-lg font-semibold text-gray-800 text-center">
                    {row[0].title}
                  </h2>
                  <p class="mt-2 text-gray-600 text-center">
                    {row[0].description}
                  </p>
                </div>
              </a>
            ) : (
              <div class="col-span-1" />
            )}
            <div class="col-span-1" />
            {row[1] && row[1].type === "drawing" ? (
              <a
                href={`/drawings/${row[1].slug}`}
                class="col-span-1 group w-full max-w-md mx-auto px-2 flex flex-col overflow-hidden rounded-lg shadow hover:shadow-lg transition bg-white"
              >
                <div class="w-full aspect-[4/5] bg-gray-100 overflow-hidden">
                  <img
                    src={row[1].image}
                    alt={row[1].title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                  />
                </div>
                <div class="p-4">
                  <h2 class="text-lg font-semibold text-gray-800 text-center">
                    {row[1].title}
                  </h2>
                  <p class="mt-2 text-gray-600 text-center">
                    {row[1].description}
                  </p>
                </div>
              </a>
            ) : (
              <div class="col-span-1" />
            )}
            <div class="col-span-1" />
          </>
        )
      )
    }
  </div>
</section>
